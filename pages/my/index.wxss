/* pages/my/index.wxss */
.container{
  background-color: #f2f2f2;
  width: 100%;
  height: 100vh;
}
.user-info{
  padding-top: 60rpx;
  background-color: #fff;
}
.user-info image{
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 30rpx auto 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, .2);
}
.user-name{
  display: block;
  text-align: center;
  padding: 30rpx 0;
}
.my-wallet{
  padding: 40rpx;
  background-color: #fff;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
button{
  width: 90%;
  position: absolute;
  bottom: 60rpx;
  left: 5%;
}